{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",  // Use "commonjs" for ts-node compatibility
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@spec/*": ["spec/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "build.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/public/"
  ]
}